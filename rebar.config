{sub_dirs, ["rel"]}.
{eunit_opts, []}.
{cover_enabled, true}.
{ct_extra_params, "-boot start_sasl -sname master -setcookie gaoler"}.
{deps, [
   {nspy, ".*", {git, "git://github.com/archie/nspy.git", "HEAD"}}
  ]}.
{pre_hooks, [{ct, "cp src/gaoler.config.src test/gaoler.config"}]}.
{post_hooks, [{eunit, "cp src/gaoler.config.src .eunit/gaoler.config"},
	      {compile, "cp src/gaoler.config.src ebin/gaoler.config"}]}.
